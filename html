<a href="#s0" > <input type="button" value=" ↑" > </a> 




        <script>
            // Récupération de tous les champs de texte et de textarea
            var champs = document.querySelectorAll('input[type="text"], textarea,input[type="date"],input[type="address"],input[type="month"]');
            
            // Ajout d'un écouteur d'événement à chaque champ
            champs.forEach(function(champ, index) {
                // Lorsque la touche Entrée est enfoncée
                champ.addEventListener('keypress', function(event) {
                    if (event.keyCode === 13) {
                        // Si ce n'est pas le dernier champ, passez au champ suivant
                        if (index < champs.length - 1) {
                            champs[index + 1].focus();
                        } else {
                            // Si c'est le dernier champ, revenez au premier champ
                            champs[0].focus();
                        }
                    }
                });
            });
        </script>
