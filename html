        <code  >
            <span>#include</span>&lt;stdio.h&gt;;

             <span >int main </span>() {
                <span >int  </span> M[100][100];
                <span >int  </span>  i,j,n,m,som;
                <span > printf </span>("donnez le nombre de ligne n&lt;100 ");
                <span > scanf </span> ("%d",&n);
                <span > printf </span>("donnez le nombre de colone m&lt;100 ");
                <span > scanf </span> ("%d",&m);
                <span > for</span>(i=0;i&lt;n;i<sup>++</sup>)
                {
                    <span > for</span>(i=0;i&lt;m;i<sup>++</sup>)
                {
                           <span > printf </span>("donnez la valeur  ");
                           <span > scanf </span> ("%d",&M);
                }
                }
                som=0;
                <span > for</span>(i=0;i&lt;n;i<sup>++</sup>)
                {
                    <span > for</span>(i=0;i&lt;m;i<sup>++</sup>)
                {
                           <span > if </span>(M[i][j]&gl;0);
                           {
                             som=som+M[i][j];
                           }
                }
                }
                <span > printf </span>("la somme des nombre positive est ",som);

            }
        </code>
    </pre>
</section>
